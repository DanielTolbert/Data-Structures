<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <EditText
        android:id="@+id/editTextRedInput"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:gravity="center"
        android:hint="0-255"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRedLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="@string/red"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextRedInput"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextGreenInput"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:gravity="center"
        android:hint="0-255"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRedInput" />

    <EditText
        android:id="@+id/editTextBlueInput"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:gravity="center"
        android:hint="0-255"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGreenInput" />

    <TextView
        android:id="@+id/textViewBlueLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="@string/blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextBlueInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGreenLabel" />

    <TextView
        android:id="@+id/textViewGreenLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="@string/green"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextGreenInput"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRedLabel" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="187dp"
        android:layout_height="92dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background"
        android:text="@string/submit"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBlueInput" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="217dp"
        android:layout_height="56dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="97dp"
        android:layout_marginRight="97dp"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="@string/PickColors"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>